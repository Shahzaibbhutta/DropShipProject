@model DropShipProject.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center my-5">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg border-0 rounded-lg">
            <div class="card-body p-4 p-md-5">
                <h2 class="text-center text-2xl font-bold text-gray-900 mb-4">@ViewData["Title"]</h2>

                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="UserType" class="form-label fw-medium text-gray-700"></label>
                            <select asp-for="UserType" class="form-select rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-600 focus:border-blue-600">
                                <option value="">-- Select Account Type --</option>
                                <option value="Supplier">Supplier</option>
                                <option value="DropShipper">DropShipper</option>
                            </select>
                            <span asp-validation-for="UserType" class="text-danger text-sm"></span>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label asp-for="Username" class="form-label fw-medium text-gray-700"></label>
                            <input asp-for="Username" class="form-control rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-600 focus:border-blue-600" />
                            <span asp-validation-for="Username" class="text-danger text-sm"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="Email" class="form-label fw-medium text-gray-700"></label>
                            <input asp-for="Email" class="form-control rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-600 focus:border-blue-600" />
                            <span asp-validation-for="Email" class="text-danger text-sm"></span>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label asp-for="CompanyName" class="form-label fw-medium text-gray-700"></label>
                            <input asp-for="CompanyName" class="form-control rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-600 focus:border-blue-600" />
                            <span asp-validation-for="CompanyName" class="text-danger text-sm"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="PhoneNumber" class="form-label fw-medium text-gray-700"></label>
                            <input asp-for="PhoneNumber" class="form-control rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-600 focus:border-blue-600" />
                            <span asp-validation-for="PhoneNumber" class="text-danger text-sm"></span>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label asp-for="Password" class="form-label fw-medium text-gray-700"></label>
                            <input asp-for="Password" type="password" class="form-control rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-600 focus:border-blue-600" id="passwordInput" />
                            <span asp-validation-for="Password" class="text-danger text-sm"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="ConfirmPassword" class="form-label fw-medium text-gray-700"></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-600 focus:border-blue-600" id="confirmPasswordInput" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger text-sm"></span>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label asp-for="Address" class="form-label fw-medium text-gray-700"></label>
                            <textarea asp-for="Address" class="form-control rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-600 focus:border-blue-600" rows="4"></textarea>
                            <span asp-validation-for="Address" class="text-danger text-sm"></span>
                        </div>
                    </div>

                    <div class="form-group mb-4">
                        <button type="submit" class="btn btn-primary w-100 bg-blue-600 hover:bg-blue-700 text-white rounded-lg py-2.5 font-medium transition-colors">Register</button>
                    </div>

                    <div class="text-center text-sm text-gray-600">
                        <p class="mb-0">Already have an account? <a asp-action="Login" class="text-blue-600 hover:text-blue-800 font-medium">Login here</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}