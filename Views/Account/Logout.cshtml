@{
    ViewData["Title"] = "Logout";
}

<div class="row justify-content-center my-5">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg border-0 rounded-lg">
            <div class="card-body p-4 p-md-5 text-center">
                <h2 class="text-2xl font-bold text-gray-900 mb-4">@ViewData["Title"]</h2>
                <h4 class="text-lg text-gray-700 mb-4">Are you sure you want to logout?</h4>

                <form asp-action="Logout" method="post" class="d-flex flex-column gap-3">
                    <button type="submit" class="btn btn-danger bg-red-600 hover:bg-red-700 text-white rounded-lg py-2.5 font-medium transition-colors">Yes, Logout</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary bg-gray-600 hover:bg-gray-700 text-white rounded-lg py-2.5 font-medium transition-colors">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>