@model DropShipProject.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center my-5">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg border-0 rounded-lg">
            <div class="card-body p-4 p-md-5">
                <h2 class="text-center text-2xl font-bold text-gray-900 mb-4">@ViewData["Title"]</h2>

                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

                    <div class="form-group mb-4">
                        <label asp-for="Username" class="form-label fw-medium text-gray-700"></label>
                        <input asp-for="Username" class="form-control rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-600 focus:border-blue-600" />
                        <span asp-validation-for="Username" class="text-danger text-sm"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Password" class="form-label fw-medium text-gray-700"></label>
                        <input asp-for="Password" type="password" class="form-control rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-600 focus:border-blue-600" />
                        <span asp-validation-for="Password" class="text-danger text-sm"></span>
                    </div>

                    <div class="form-group mb-4 form-check">
                        <input asp-for="RememberMe" class="form-check-input rounded border-gray-300 focus:ring-blue-600" />
                        <label asp-for="RememberMe" class="form-check-label text-gray-700">Remember me</label>
                    </div>

                    <div class="form-group mb-4">
                        <button type="submit" class="btn btn-primary w-100 bg-blue-600 hover:bg-blue-700 text-white rounded-lg py-2.5 font-medium transition-colors">Login</button>
                    </div>

                    <div class="text-center text-sm text-gray-600">
                        <p class="mb-2">Don't have an account? <a asp-action="Register" class="text-blue-600 hover:text-blue-800 font-medium">Register here</a></p>
                        <p><a asp-action="ForgotPassword" class="text-blue-600 hover:text-blue-800 font-medium">Forgot your password?</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}