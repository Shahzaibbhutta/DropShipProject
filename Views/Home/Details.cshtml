@using DropShipProject.Models
@model Product

@{
    ViewData["Title"] = @Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<div class="container my-4">
    <h1 class="mb-4 text-center">@Model.Name</h1>

    <div class="row">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.ProductPicture))
            {
                <img src="@Model.ProductPicture" class="img-fluid rounded mb-3" alt="@Model.Name" style="max-height: 400px; object-fit: cover;">
            }
            else
            {
                <img src="/images/placeholder.jpg" class="img-fluid rounded mb-3" alt="No image available" style="max-height: 400px; object-fit: cover;">
            }
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Product Details</h5>
                    <p class="card-text">
                        <strong>Name:</strong> @Model.Name<br />
                        <strong>Price:</strong> @Model.Price<br />
                        <strong>Stock:</strong> @Model.Stock<br />
                        <strong>SKU:</strong> @Model.SKU<br />
                        <strong>Supplier:</strong> @(Model.Supplier != null ? Model.Supplier.UserName : "Unknown Supplier")
                    </p>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Products</a>
                </div>
            </div>
        </div>
    </div>
</div>