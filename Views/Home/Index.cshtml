@using DropShipProject.Models
@model List<SupplierProductsViewModel>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<div class="container my-4">
    <h1 class="mb-4 text-center">Welcome to Our Store</h1>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            No products available at the moment.
        </div>
    }
    else
    {
        @foreach (var supplierGroup in Model)
        {
            <h2 class="mb-3">Products by @supplierGroup.SupplierName</h2>
            <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
                @foreach (var product in supplierGroup.Products)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            @if (!string.IsNullOrEmpty(product.ProductPicture))
                            {
                                <img src="@product.ProductPicture" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <img src="/images/placeholder.jpg" class="card-img-top" alt="No image available" style="height: 200px; object-fit: cover;">
                            }
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text">
                                    <strong>Price:</strong> @product.Price<br />
                                    <strong>Stock:</strong> @product.Stock<br />
                                    <strong>SKU:</strong> @product.SKU
                                </p>
                            </div>
                            <div class="card-footer text-center">
                                <a href="@Url.Action("Details", "Home", new { id = product.Id })" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>