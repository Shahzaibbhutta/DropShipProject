@model List<Order>

<h2>My Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order #</th>
            <th>Supplier</th>
            <th>Date</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderNumber</td>
                <td>@order.Supplier.CompanyName</td>
                <td>@order.OrderDate.ToString("d")</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>
                    <span class="badge @GetStatusBadgeClass(order.Status)">
                        @order.Status
                    </span>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-info">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning",
            "Processing" => "bg-info",
            "Shipped" => "bg-success",
            "Delivered" => "bg-primary",
            "Cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}