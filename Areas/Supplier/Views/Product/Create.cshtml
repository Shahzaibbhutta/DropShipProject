@using DropShipProject.Models
@model Product
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create Product";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h2 class="mb-0">Create Product</h2>
                </div>
                <div class="card-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <p class="mb-1">@error.ErrorMessage</p>
                            }
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <form asp-action="Create" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-bold text-primary">Product Name</label>
                            <input asp-for="Name" class="form-control form-control-lg" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Price" class="form-label fw-bold text-primary">Price (PKR)</label>
                            <input asp-for="Price" class="form-control form-control-lg" type="number" step="0.01" required />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Stock" class="form-label fw-bold text-primary">Stock Quantity</label>
                            <input asp-for="Stock" class="form-control form-control-lg" type="number" required />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="SKU" class="form-label fw-bold text-primary">SKU</label>
                            <input asp-for="SKU" class="form-control form-control-lg" required />
                            <span asp-validation-for="SKU" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label for="ProductPictureFile" class="form-label fw-bold text-primary">Product Picture</label>
                            <input type="file" name="ProductPictureFile" class="form-control form-control-lg" accept="image/*" required />
                            @if (ViewData.ModelState.ContainsKey("ProductPictureFile"))
                            {
                                <span class="text-danger">
                                    @ViewData.ModelState["ProductPictureFile"].Errors.FirstOrDefault()?.ErrorMessage
                                </span>
                            }
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Create</button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Bootstrap validation
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}