@model StockManagementViewModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Manage Stock";
}

<div class="container py-4">
    <div class="border-bottom pb-3 mb-4">
        <h2 class="h4 text-dark">Manage Stock</h2>
        <p class="mb-1"><strong>Product:</strong> @Model.ProductName (SKU: @Model.SKU)</p>
        <p class="mb-0"><strong>Current Stock:</strong> <span class="badge bg-success">@Model.CurrentStock</span></p>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header bg-light">
            <span class="fw-semibold text-secondary">Add Stock</span>
        </div>
        <div class="card-body">
            <form asp-action="AddStock" method="post">
                <input type="hidden" asp-for="ProductId" />
                <div class="row g-3 align-items-center mb-2">
                    <div class="col-md-4">
                        <label asp-for="QuantityToAdd" class="form-label small fw-semibold">Quantity to Add</label>
                        <input asp-for="QuantityToAdd" class="form-control form-control-sm" placeholder="e.g., 100" />
                        <span asp-validation-for="QuantityToAdd" class="text-danger small"></span>
                    </div>
                    <div class="col-md-8">
                        <label asp-for="Notes" class="form-label small fw-semibold">Notes</label>
                        <input asp-for="Notes" class="form-control form-control-sm" placeholder="Optional notes" />
                        <span asp-validation-for="Notes" class="text-danger small"></span>
                    </div>
                </div>
                <div class="text-end mt-3">
                    <button type="submit" class="btn btn-sm btn-primary px-4">Add Stock</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-light">
            <span class="fw-semibold text-secondary">Stock Transaction History</span>
        </div>
        <div class="card-body">
            @if (Model.StockTransactions.Any())
            {
                <div class="table-responsive">
                    <table class="table table-sm table-bordered align-middle">
                        <thead class="table-light small">
                            <tr>
                                <th>Date</th>
                                <th>Type</th>
                                <th>Quantity</th>
                                <th>Order ID</th>
                                <th>Notes</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var t in Model.StockTransactions)
                            {
                                <tr>
                                    <td>@t.TransactionDate.ToString("g")</td>
                                    <td>@t.TransactionType</td>
                                    <td>@t.Quantity</td>
                                    <td>@(t.OrderId?.ToString() ?? "-")</td>
                                    <td>@t.Notes</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted small mb-0">No stock transactions found.</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
