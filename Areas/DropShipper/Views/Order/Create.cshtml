@using DropShipProject.Models
@model CreateOrderViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create New Order";
}

<!-- Bootstrap 5 and jQuery -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="container my-4">
    <h2 class="mb-4">Create New Order</h2>

    <form asp-action="Create" method="post" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="SupplierId" class="form-label fw-bold">Supplier</label>
                <select asp-for="SupplierId" class="form-select" asp-items="ViewBag.Suppliers" required>
                    <option value="">Select a supplier</option>
                    <option value="8">Admin Supplier</option>
                </select>
                <span asp-validation-for="SupplierId" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <label asp-for="Notes" class="form-label fw-bold"></label>
                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Add any notes for the supplier"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
        </div>

        <h4 class="mb-3">Order Items</h4>
        <div id="orderItems" class="mb-4">
            @for (int i = 0; i < Model.Items.Count; i++)
            {
                <div class="order-item row g-3 mb-3 align-items-end">
                    <div class="col-md-5">
                        <input asp-for="Items[i].ProductName" class="form-control" placeholder="Product Name" required />
                        <span asp-validation-for="Items[i].ProductName" class="text-danger"></span>
                    </div>
                    <div class="col-md-2">
                        <input asp-for="Items[i].Quantity" class="form-control" type="number" min="1" placeholder="Qty" required />
                        <span asp-validation-for="Items[i].Quantity" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <input asp-for="Items[i].UnitPrice" class="form-control" type="number" step="0.01" placeholder="Unit Price" required />
                        <span asp-validation-for="Items[i].UnitPrice" class="text-danger"></span>
                    </div>
                    <div class="col-md-2">
                        <button type="button" class="btn btn-danger remove-item w-100">Remove</button>
                    </div>
                </div>
            }
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <button type="button" id="addItem" class="btn btn-outline-secondary w-100">Add Item</button>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <input type="submit" value="Place Order" class="btn btn-primary w-100" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Add new item dynamically
            $("#addItem").click(function () {
                var index = $("#orderItems .order-item").length;
                var html = `
                    <div class="order-item row g-3 mb-3 align-items-end">
                        <div class="col-md-5">
                            <input name="Items[${index}].ProductName" class="form-control" placeholder="Product Name" required />
                            <span class="text-danger field-validation-valid" data-valmsg-for="Items[${index}].ProductName" data-valmsg-replace="true"></span>
                        </div>
                        <div class="col-md-2">
                            <input name="Items[${index}].Quantity" class="form-control" type="number" min="1" placeholder="Qty" value="1" required />
                            <span class="text-danger field-validation-valid" data-valmsg-for="Items[${index}].Quantity" data-valmsg-replace="true"></span>
                        </div>
                        <div class="col-md-3">
                            <input name="Items[${index}].UnitPrice" class="form-control" type="number" step="0.01" placeholder="Unit Price" required />
                            <span class="text-danger field-validation-valid" data-valmsg-for="Items[${index}].UnitPrice" data-valmsg-replace="true"></span>
                        </div>
                        <div class="col-md-2">
                            <button type="button" class="btn btn-danger remove-item w-100">Remove</button>
                        </div>
                    </div>
                `;
                $("#orderItems").append(html);
            });

            // Remove item dynamically and reindex
            $(document).on("click", ".remove-item", function () {
                $(this).closest(".order-item").remove();
                $("#orderItems .order-item").each(function (index) {
                    $(this).find("input").each(function () {
                        var name = $(this).attr("name");
                        if (name) {
                            name = name.replace(/\[\d+\]/, `[${index}]`);
                            $(this).attr("name", name);
                        }
                        var span = $(this).closest("div").find("span");
                        var valMsgFor = span.attr("data-valmsg-for");
                        if (valMsgFor) {
                            valMsgFor = valMsgFor.replace(/\[\d+\]/, `[${index}]`);
                            span.attr("data-valmsg-for", valMsgFor);
                        }
                    });
                });
            });

            // Bootstrap form validation
            $("form").on("submit", function (event) {
                if (!this.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                $(this).addClass("was-validated");
            });
        });
    </script>
}
